# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/saas_auth
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/saas_auth

# JWT Secrets
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_REFRESH_SECRET=your_refresh_token_secret_also_change_this_min_32_chars
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Email Configuration (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@yoursaas.com

# Frontend URL
FRONTEND_URL=http://localhost:5000

# OTP Configuration
OTP_EXPIRE_MINUTES=10
